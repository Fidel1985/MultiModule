<?xml version="1.0" encoding="UTF-8"?>
<DbConfig xmlns="http://www.cgm.com/2011/helix/configuration"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.cgm.com/2011/helix/configuration http://www.cgm.com/2011/helix/configuration.xsd">

    <!--H2-->
    <Alias name="/multiModuleApp" connection="localH2Connection"/>

    <Connection name="localH2Connection" driver="H2">
        <Property name="user" value="sa"/>
        <Property name="password" value="#"/>
        <Property name="host" value="file"/>
        <Property name="dbName" value="~/database/db/multimodule;AUTO_SERVER=TRUE"/>
    </Connection>

</DbConfig>